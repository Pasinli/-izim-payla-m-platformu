    <!-- Menu toggle button -->
    <a href="@Url.Action("DeleteArticle","Article",new {area="Author"})" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        <span class="label label-warning" id="LikecountPop"></span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">Bildirimleriniz var</li>
        <li>
            <!-- Inner Menu: contains the notifications -->
            <ul class="menu">
                <li>
                    <!-- start notification -->
                    <a href="#">
                        <i class="fa fa-users text-aqua" id="Likecount"></i>
                        
