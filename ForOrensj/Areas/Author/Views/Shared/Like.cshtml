<script src="~/Content/js/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {

        $.ajax({
            url: "http://localhost:51139/account/GetNotif",
            type: "GET",

            success: function (data) {


                $("#Likecount").text(data.LikeCount + +" "+"  Adet yeni beğeniniz var")
                $("#LikecountPop").text(data.LikeCount)

            },
            error: function (data) {

                $("#count").text(data.LikeCount +"  Beğeni sisteminde problem var..")


            }



        });


    })


</script>