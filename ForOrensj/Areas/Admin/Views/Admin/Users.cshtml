@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Oren.Model.Model.Entities.AppUser>
@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section UserCss
{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Areas/Admin/Content/UserCardcSS.css" rel="stylesheet" />
}


<div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  ">
                <h2>Kullanıcı Ara</h2>
                <input value="" id="nick" class="form-control-lg form-control" />

                <input type="button" value="Ara" onclick="Check()" class="btn btn-dark" />
            </div>
        </div>
    </div>
</div>

<br />
<br /><br />
<br /><br />
<br /><br />
<br /><br />
<br /><br />
<br /><br />
<br /><br />
<br /><br />
<br /><br />
<br /><br />
<br />
@foreach (var item in Model)
{
    <div class="card">
        <div class="box">
            <div class="img">
                <img src="~/Content/pp/@item.ProfileImage">
            </div>
            <h2>@Html.ActionLink(@item.Nick, "FullProfile", "Account", new { area = "", id = item.ID }, new { @class = "" }) <span>@item.Role.ToString()</span></h2>
            <p>
                @item.AboutMe
            </p>
            <span>
                @Html.ActionLink("Yetkisini al", "RemovePerm", new { area = "Admin", id = item.ID }, new { @class = "btn btn-primary" })
                <br />
                @Html.ActionLink("Kullanıcıyı Kaldır", "DeleteUser", new { area = "Admin", id = item.ID }, new { @class = "btn btn-primary" })
            </span>
        </div>
    </div>

}


<center>
    <div class="pagedList">
        @Html.PagedListPager(Model, page => Url.Action("Users", new { page }), PagedListRenderOptions.TwitterBootstrapPager)
    </div>
</center>


<script>

    function Check() {

        var deger = $("#nick").val()

        window.document.location.href = "/Admin/Admin/Users/" + deger

    }

</script>