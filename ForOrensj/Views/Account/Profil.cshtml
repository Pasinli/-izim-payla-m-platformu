
@model ForOrensj.Models.UserUpdateVM
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section input
    {
    <style>

        input[type="file"] {
            display: none;
        }

        .custom-file-upload {
            border: 1px solid #ccc;
            display: inline-block;
            padding: 6px 12px;
            cursor: pointer;
        }
    </style>
    <script src="~/Areas/Author/Content/ckeditor.js"></script>
}


    <center>
        @using (Html.BeginForm("Profil", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

            <h4>Profil</h4>
        <div class="container">


                <div class="col-md-8">


                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">

                                        <div class="form-group row">
                                            <center>
                                                <label for="file-upload" class="col-lg-12 custom-file-upload">
                                                    <i class="fa fa-cloud-upload"></i> Resim Seç
                                                </label>
                                            </center>

                                            <input id="file-upload" name="file" type="file" />
                                        </div>
                                        <div class="form-group row">
                                            <label for="username" class="col-6 col-form-label">Nick</label>
                                            <div class="col-8">
                                                @Html.TextBoxFor(x => x.Nick, new { @class = "form-control", @placeholder = "Nick" })
                                                @Html.ValidationMessageFor(x => x.Nick, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="name" class="col-6 col-form-label">İsim</label>
                                            <div class="col-8">
                                                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", @placeholder = "İsminizi giriniz" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="email" class="col-6 col-form-label">Email*</label>
                                            <div class="col-8">
                                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Mail adresiniz" })
                                                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="email" class="col-6 col-form-label">Telefon</label>
                                            <div class="col-8">
                                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Telefon Numarası" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="publicinfo" class="col-6 col-form-label">Hakkımda</label>
                                            <div class="col-8">
                                                @Html.TextAreaFor(x => x.Hakkimda)
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="newpass" class="col-6 col-form-label">Password</label>
                                            <div class="col-8">
                                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Şifrenizi giriniz" })
                                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <select class="form-control"name="roleselect" id="roleselect">
                                                <option>Ressam</option>
                                                <option>Kullanıcı</option>
                                            
                                            </select>
                                        </div>


                                    </div>
                                    </div>

                            </div>
                        </div>
                    </div>
                </div>

        </div>
            <div class="col-xl-2">
                <h4>Bilgileri Kaydet</h4>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
            <div class="col-xl-2">
                <h6>Bilgileri kaydettikten sonra bu formu görmeyeceksiniz.</h6>
            </div>
            }
        
        </center>

}
