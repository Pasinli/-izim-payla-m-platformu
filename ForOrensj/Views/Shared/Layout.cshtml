<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Content/js/jquery-1.10.2.js"></script>
    <link href="~/Content/css/FurNav.css" rel="stylesheet" />
    <link href="~/Content/css/grid-gallery.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    @RenderSection("notfoundcss", false)
    @RenderSection("input", false)
    @RenderSection("fullp", false)
    @RenderSection("AnasayfaPics", false)
    @RenderSection("CommentCss", false)
    @RenderSection("Msg", false)
</head>



<body style="background-color:#212529">


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" role="navigation">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">Oren</a>
            <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar">
                &#9776;
            </button>
            <div class="collapse navbar-collapse" id="exCollapsingNavbar">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a href="@Url.Action("Users","Account",new {area="" })" class="nav-link">Sanatçı Ara</a></li>
                </ul>

                <ul class="nav navbar-nav">
                    <li class="nav-item"><a href="@Url.Action("GetArticlesWhoMostLiked","Article",new {area="Author" })" class="nav-link">En çok Beğenilenler</a></li>
                </ul>

                <ul class="nav navbar-nav flex-row justify-content-between ml-auto">
                    <li class="nav-item order-2 order-md-1"><a href="#" class="nav-link" title="settings"><i class="fa fa-cog fa-fw fa-lg"></i></a></li>
                    <li class="dropdown order-1">

                        @if (HttpContext.Current.User.Identity.Name != string.Empty)
            {

                <button type="button" style="color:cornflowerblue" onclick="window.location.href='/Account/Profil'" class="btn btn-outline-secondary">

                    <span class="caret">@HttpContext.Current.User.Identity.Name</span>
                </button>

                <button type="button" style="color:cornflowerblue" onclick="window.location.href='/Account/Messages'" class="btn btn-outline-secondary">

                    <span class="caret">Mesajlarım</span>
                </button>


}
else
{
            <button type="button" style="color:cornflowerblue" onclick="window.location.href='/Account/Login'" class="btn btn-outline-secondary">

                <span class="caret">Giriş</span>

            </button>
}



                    </li>



                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <li class="nav-item order-2 order-md-1"><a href="#" class="nav-link" title="settings"></a></li>
            <li class="dropdown order-1">
                <button type="button" style="color:cornflowerblue" onclick="window.location.href='/Account/SignOut'" class="btn btn-outline-secondary">

                    <span class="caret">Çıkış</span>

                </button>

            </li>
}


                </ul>



            </div>
        </div>
    </nav>


    <br />
    <br />  <br />
    <br />




    @RenderBody()

</body>

</html>

<script src="~/Content/js/bootstrap.js"></script>
<script src="~/Content/js/Menu.js"></script>
